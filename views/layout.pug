doctype html
html
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title The Clubhouse
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Oswald:wght@300&display=swap", rel="stylesheet")
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav 
      a(href="/post").clubhouse.clubhouse-title The Clubhouse

      a(href="/post")
        button See All Posts 

      if user
        p.username-container Logged in as 
          span.username= user.formattedUsername

        if !user.isMember
          a(href="/account/member")
            button Become a Member  

        if user.isMember && !user.isAdmin
          a(href="/account/admin")
            button Become an Admin  

        form(action="/account/log-out", method="post")
          input(type="submit", value="Log Out")

      else 
        a(href="/account/log-in")
          button Log In  

        a(href="/account/sign-up")
          button Sign Up
          
    block content
